{
  "name": "Twiterian",
  "version": "0.1.2",
  "description": "Tweet with images at popup window.",
  "author": "Hexin",
  "license": "MIT",
  "repository": "https://github.com/hexium310/Twiterian",
  "scripts": {
    "build": "run-s lint clean:release copy:manifest && webpack --mode production",
    "build:dev": "webpack --mode development && cpx src/manifest.json dist/",
    "clean": "run-p clean:*",
    "clean:dev": "rimraf dist/",
    "clean:release": "rimraf releases/src/",
    "copy:manifest": "cpx src/manifest.json releases/src/",
    "lint": "run-p lint:*",
    "lint:background": "eslint src/background.js",
    "lint:main": "eslint src/main/",
    "lint:options": "eslint src/options/",
    "lint:utils": "eslint src/utils/",
    "release": "run-s build && node scripts/zip.js",
    "start": "yarn watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "run-p watch:*",
    "watch:manifest": "cpx -w src/manifest.json dist/",
    "watch:contents": "webpack --watch --mode development"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "cpx": "^1.5.0",
    "css-loader": "^1.0.1",
    "eslint": "^5.8.0",
    "glob": "^7.1.3",
    "glob-promise": "^3.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mz": "^2.7.0",
    "node-zip": "^1.1.1",
    "npm-run-all": "^4.1.3",
    "query-string": "^6.2.0",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "svelte": "^2.15.2",
    "svelte-loader": "^2.11.0",
    "twitter": "^1.7.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "browsers": [
              "last 2 chrome versions"
            ]
          },
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "no-extra-boolean-cast": "off"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "globals": {
      "chrome": false
    }
  },
  "dependencies": {}
}
