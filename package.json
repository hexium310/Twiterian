{
  "name": "Twiterian",
  "version": "0.1.1",
  "description": "Tweet with images at popup window.",
  "author": "Hexin",
  "scripts": {
    "start": "node scripts/start.js",
    "build": "rimraf releases/src/ && cpx src/manifest.json releases/src/ && parcel build --no-cache -d releases/src/main src/main/index.html && parcel build --no-cache -d releases/src/options src/options/index.html",
    "release": "npm run build && node scripts/release.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "axios": "^0.17.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cpx": "^1.5.0",
    "eslint": "^4.14.0",
    "glob-promise": "^3.3.0",
    "mz": "^2.7.0",
    "node-zip": "^1.1.1",
    "parcel-bundler": "^1.4.1",
    "rimraf": "^2.6.2",
    "twitter": "^1.7.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "stage-2"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "semi": [
        "warn",
        "never"
      ],
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "no-extra-boolean-cast": "off"
    },
    "env": {
      "es6": true,
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "globals": {
      "chrome": false
    }
  }
}
