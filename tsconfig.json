{
  "compilerOptions": {
    "outDir": "./dist/",
    "typeRoots": ["./typings"],
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.js",
    "./src/**/*",
    "./typings"
  ]
}
